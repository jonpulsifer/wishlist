<header class="mdl-layout__header">
  <div class="mdl-layout__header-row">
    <span class="mdl-layout-title"><%= yield(:title) %></span>
  </div>
</header>
<div class="mdl-layout__drawer santa">
  <span class="mdl-layout-title">
    <%= link_to("Wishin.app", root_path, class: "custom-title") %>
  </span>
  <nav class="mdl-navigation">
      <%= link_to 'Your Profile', user_path(current_user), class: "mdl-navigation__link nav-link" %>
      <%= link_to 'All Gifts', gifts_path, class: "mdl-navigation__link nav-link" %>
      <%= link_to 'People', users_path, class: "mdl-navigation__link nav-link" %>
      <%= link_to 'Edit Profile', edit_user_path(current_user), class: "mdl-navigation__link nav-link" %>
  </nav>
  <nav class="mdl-navigation bottom-nav">
    <%= link_to "Logout (#{current_user.name.capitalize})", logout_path, class: "mdl-navigation__link nav-link" %>
  </nav>
</div>
