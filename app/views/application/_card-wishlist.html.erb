<div class="mdl-cell">
  <div class="santa mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-color--primary-dark mdl-color-text--white">
      <h3 class="mdl-card__title-text"><%= (current_user.id == user.id ? 'My' : user.name.capitalize + "'s") + " Gifts" %></h3>
    </div>
    <% if user.gifts.any? %>
      <%= render "gift-table", user: user %>
    <% else %>
      <div class="mdl-card__supporting-text">
        <h6>No gifts found! ðŸ˜ž</h6>
      </div>
    <% end %>
    <div class="mdl-card__actions mdl-card--border">
      <% if current_user == user && !current_page?(controller: 'gifts', action: 'new') %>
        <%= link_to "Add Gift", :new_gift, class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
      <% else %>
        <%= link_to "All Users", users_path, class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
        <%= link_to "Go Home", current_user, class: "mdl-button mdl-js-button mdl-button--colored" %>
      <% end %>
      <% if current_page?(controller: 'gifts', action: 'new') %>
        <%= link_to "Go Home", user, class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
      <% end %>
    </div>
  </div>
</div>
