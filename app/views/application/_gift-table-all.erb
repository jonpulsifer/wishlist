<% if gifts.any? %>
  <table id="wishlist" class="mdl-data-table mdl-js-data-table">
  <thead class="thead-light">
    <tr>
      <th class="mdl-data-table__cell--non-numeric">Gift</th>
      <th class="mdl-data-table__cell--non-numeric">Link</th>
      <th class="mdl-data-table__cell--non-numeric">Person</th>
      <th class="mdl-data-table__cell--non-numeric">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% gifts.each do |gift| %>
    <tr>
      <td class="mdl-data-table__cell--non-numeric"><%= link_to gift.name, gift_path(gift.id) %></td>
      <td class="mdl-data-table__cell--non-numeric"><%= link_to gift.url, url_for(gift.url) %></td>
      <td class="mdl-data-table__cell--non-numeric"><%= link_to gift.user.name.capitalize, user_path(gift.user) %></td>
      <td class="mdl-data-table__cell--non-numeric"><%= render "button-claim", gift: gift %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <div class="mdl-card__supporting-text">
    <h6>There are no unclaimed gifts avaiable!</h6>
  </div>
<% end %>
