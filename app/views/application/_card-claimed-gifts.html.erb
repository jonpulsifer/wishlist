<div class="mdl-cell mdl-cell--7-col mdl-cell--12-col-tablet mdl-cell--12-col-phone">
  <div class="mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
      <h3 class="mdl-card__title-text">Gifts you claimed</h3>
    </div>
    <% if gifts.any? %>
    <%= render "gift-table-all", gifts: gifts %>
    <% else %>
    <div class="mdl-card__supporting-text">
      <h6>You have not claimed any gifts</h6>
    </div>
    <% end %>
    <div class="mdl-card__actions mdl-card--border">
      <%= link_to "Gifts", gifts_path, class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
    </div>
  </div>
</div>
