<div class="mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
    <h3 class="mdl-card__title-text">Gifts you claimed</h3>
  </div>
  <% if gifts.any? %>
  <%= render "gift-list", gifts: gifts %>
  <% else %>
  <div class="mdl-card__supporting-text">
    <h6>You have not claimed any gifts</h6>
  </div>
  <% end %>
  <div class="mdl-card__actions mdl-card--border">
      <%= link_to "claim more gifts", gifts_path, class: "mdl-button mdl-js-button mdl-button--colored" %>
    <% if current_page?(controller: 'gifts', action: 'new') %>
      <%= link_to "Go Home", user, class: "mdl-button mdl-js-button mdl-button--colored" %>
    <% end %>
  </div>
</div>
