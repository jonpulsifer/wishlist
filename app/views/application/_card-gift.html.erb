<div class="mdl-cell mdl-cell--5-col mdl-cell--4-col-tablet mdl-cell--4-col-phone">
  <div class="santa mdl-card mdl-shadow--8dp">
    <div class="mdl-card__title mdl-color--green-800 mdl-color-text--white">
      <h3 class="mdl-card__title-text"><%= gift.name %></h3>
    </div>
    <div class="mdl-card__supporting-text">
      <% if gift.url? %>
        <h6>Link:</h6>
        <%= link_to gift.url, gift.url %>
      <% end %>
      <% if gift.notes? %>
        <h6>Notes:</h6>
        <p><%= gift.notes %></p>
      <% end %>

    </div>
    <div class="mdl-card__actions mdl-card--border">
        <%= render "button-claim", gift: gift, user: @user %>
        <% if current_user == @user %>
          <%= link_to "edit", edit_gift_path(gift.id), class: "mdl-button mdl-js-button mdl-button--accent" %>
          <% if Date.today < Date.new(2018,11,15) %>
            <%= link_to "delete", gift, method: :delete, class: "mdl-button mdl-js-button mdl-button--accent" %>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
