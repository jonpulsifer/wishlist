<% provide(:title, "Add Gift to Wishlist") %>
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <%= render "navbar" %>
  <main class="mdl-layout__content">
  <div class="mdl-grid">
   <div class="mdl-cell mdl-cell--3-col mdl-cell--4-col-tablet mdl-cell--4-col-phone">
    <div class="mdl-card mdl-shadow--8dp">
      <div class="mdl-card__title mdl-color--primary-dark mdl-color-text--white">
        <h1 class="mdl-card__title-text">Add a Gift to Your Wishlist</h1>
      </div>
      <div class="mdl-card__supporting-text">
        <%= flash_messages %>
        <h6>Fill out the form below to create a gift and add it to your profile</h6>
        <p>Want to let someone know your size? Favourite colour? Put it in the notes!</p>
        <%= form_for(@gift) do |f| %>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_field :name, class: 'mdl-textfield__input' %>
          <%= f.label :name, class: 'mdl-textfield__label' %>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_field :url, class: 'mdl-textfield__input' %>
          <%= f.label :link, class: 'mdl-textfield__label' %>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_area :notes, class: 'mdl-textfield__input' %>
          <%= f.label :notes, class: 'mdl-textfield__label' %>
        </div>
      </div>
      <div class="mdl-card__actions mdl-card--border">
      <%= f.submit "Add Gift", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
      <%= f.hidden_field :wishlist_id, value: current_user.wishlist.id %>
      </div>
      <% end %>
    </div>
   </div>
   <%= render 'card-wishlist', user: current_user %>
   </div>
  </main>
</div>
