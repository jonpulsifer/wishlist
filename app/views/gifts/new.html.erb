<% provide(:title, "Add a Gift to Your Wishlist") %>
<div class="mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--4-col-phone">
  <div class="mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
      <h3 class="mdl-card__title-text">Add a Gift to Your Wishlist</h3>
    </div>
    <div class="mdl-card__supporting-text">
      <h4 class="mdl-typography--subhead">Fill out the form below to create a gift and add it to your profile</h4>
      <p class="mdl-typography--body-1">Want to let someone know your favourite colour? Put it in the notes!</p>
      <%= form_with(model: @gift, local: true) do |f| %>
      <%= flash_messages %>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :name, class: 'mdl-textfield__input' %>
        <%= f.label :name, class: 'mdl-textfield__label' %>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_area :notes, class: 'mdl-textfield__input' %>
        <%= f.label :notes, class: 'mdl-textfield__label' %>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :url, class: 'mdl-textfield__input' %>
        <%= f.label :link, class: 'mdl-textfield__label' %>
      </div>
    </div>
    <div class="mdl-card__actions mdl-card--border">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "Add Gift", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
    </div>
    <% end %>
  </div>
</div>
<div class="mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--4-col-phone">
  <div class="mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
      <h3 class="mdl-card__title-text">Your Gifts</h3>
    </div>
    <div class="mdl-card__supporting-text">
      <% if current_user.gifts.any? %>
        <%= render "gift-list", gifts: current_user.gifts %>
      <% else %>
        <h6>No gifts found! ðŸ˜ž</h6>
      <% end %>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <%= link_to "All Available Gifts", available_gifts_path, class: "mdl-button mdl-js-button mdl-button--colored" %>
      <%= link_to "Go Home", current_user, class: "mdl-button mdl-js-button mdl-button--colored" %>
    </div>
  </div>
</div>
