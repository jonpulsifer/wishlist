<body class="text-center">
  <div class="container">
    <div class="row">
      <div class="col-sm">
      <%= form_for :session, url: login_url, html: {class: 'form-signin'} do |f| %>
        <img class="mb-4" src="/images/holly.png" alt="" width="125" height="125">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <%= flash_messages %>
        <%= f.label :name, class: 'sr-only' %>
        <%= f.text_field :name, class: 'form-control' , autofocus: true, placeholder: "Name" %>
        <%= f.label :password, class: 'sr-only' %>
        <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
        <%= f.submit "Continue", class: 'btn btn-lg btn-primary btn-block' %>
      <% end %>
      </div>
    </div>
    <div class="row justify-content-center" style="margin-top:2em;">
      <div class="col-sm-auto align-items-center">
        <h5>Need an account?</h5>
        <a href="/users/new"><button type="button" class="btn btn-secondary btn-sm">Register Here</button></a>
      </div>
    </div>
  </div><!-- /container -->
</body>
