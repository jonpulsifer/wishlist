<% provide(:title, "Log In!") %>
<div class="mdl-layout mdl-js-layout mdl-color--grey-300">
  <main class="mdl-layout__content">
    <div class="login mdl-card mdl-shadow--8dp">
      <div class="mdl-card__title mdl-color--primary-dark mdl-color-text--white">
        <h1 class="mdl-card__title-text">Please sign in</h1>
      </div>
      <div class="mdl-card__supporting-text">
        <%= flash_messages %>
        <%= form_for :session, url: login_url do |f| %>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.text_field :name, class: 'mdl-textfield__input', autofocus: true %>
            <%= f.label :name, class: 'mdl-textfield__label' %>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.password_field :password, class: 'mdl-textfield__input' %>
            <%= f.label :password, class: 'mdl-textfield__label' %>
          </div>
          <div class="mdl-card__actions">
            <%= f.submit "Log In", class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary' %>
            <%= link_to "Register Here", :new_user, class: "mdl-button mdl-js-button mdl-button--accent" %>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>
