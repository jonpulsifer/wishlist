<% provide(:title, "Wishlist!") %>
<% provide(:title, "Add Gift to Wishlist") %>
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <%= render "navbar" %>
  <main class="mdl-layout__content">
   <div class="mdl-cell">
    <div class="mdl-card mdl-shadow--8dp">
      <div class="mdl-card__title mdl-color--primary-dark mdl-color-text--white">
        <h1 class="mdl-card__title-text">Add Wishlist</h1>
      </div>
      <div class="mdl-card__supporting-text">
        <%= flash_messages %>
        <h6>Create your new wishlist and give it a name. You can name it whatever you like.</h6>
        <h6>Here are some examples:</h6>
        <ul>
          <li>Constance's <strong>Bougie Christmas</strong> Wishlist</li>
          <li>Jonathan's  <strong>Techno Christmas</strong> Wishlist</li>
          <li>Grandma's <strong>Take Me Somewhere Warm</strong> Wishlist</li>
        </ul>
        <%= form_for(@wishlist) do |f| %>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_field :name, class: 'mdl-textfield__input', autofocus: true %>
          <%= f.label :name, class: 'mdl-textfield__label' %>
        </div>
      </div>
      <div class="mdl-card__actions mdl-card--border">
      <%= f.submit "Create Wishlist", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      </div>
      <% end %>
    </div>
   </div>
  </main>
</div>
