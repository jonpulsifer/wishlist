<% provide(:title, "People with gifts") %>
<%= flash_messages %>
<div class="mdl-cell mdl-cell--6-col">
  <% @families.each do |family| %>
    <h2 class="mdl-typography--subhead"><%= "#{family.name} Family" %></h2>
    <ul class="mdl-list">
      <% family.users_except(current_user.id).each do |user| %>
        <li class="mdl-list__item mdl-list__item--two-line">
          <span class="mdl-list__item-primary-content">
            <i class="material-icons mdl-list__item-icon">face</i>
            <%= link_to user.name.capitalize!, user_path(user) %>
            <span class="mdl-list__item-sub-title">
              <%= "#{user.gifts.count} #{user.gifts.count == 1 ? 'gift' : 'gifts'}, #{user.unclaimed_gifts.count} unclaimed" %>
            </span>
          </span>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
