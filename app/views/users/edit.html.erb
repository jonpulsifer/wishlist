<% provide(:title, "Edit user") %>
<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl--cell-4-col-phone">
    <div class="mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-color--primary-dark mdl-color-text--white">
        <h3 class="mdl-card__title-text">Edit Profile</h3>
      </div>
      <div class="mdl-card__supporting-text">
        <%= flash_messages %>
        <%= form_for(current_user) do |f| %>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_field :name, class: 'mdl-textfield__input', disabled: true %>
          <%= f.label :name, class: 'mdl-textfield__label' %>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.password_field :password, class: 'mdl-textfield__input' %>
          <%= f.label :change_password, class: 'mdl-textfield__label' %>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.password_field :password_confirmation, class: 'mdl-textfield__input' %>
          <%= f.label :password_confirmation, class: 'mdl-textfield__label' %>
        </div>
      </div>
      <div class="mdl-card__actions mdl-card--border">
      <%= f.submit "Save changes", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
