<% provide(:title, "Edit user") %>
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <%= render "navbar" %>
  <main class="mdl-layout__content">
   <div class="mdl-cell">
    <div class="mdl-card mdl-shadow--8dp">
      <div class="mdl-card__title mdl-color--primary-dark mdl-color-text--white">
        <h1 class="mdl-card__title-text">Edit Profile</h1>
      </div>
      <div class="mdl-card__supporting-text">
        <%= flash_messages %>
        <%= form_for(current_user) do |f| %>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_field :name, class: 'mdl-textfield__input' %>
          <%= f.label :name, class: 'mdl-textfield__label' %>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_field :shirt_size, class: 'mdl-textfield__input' %>
          <%= f.label :shirt_size, class: 'mdl-textfield__label' %>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_field :pant_size, class: 'mdl-textfield__input' %>
          <%= f.label :pant_size, class: 'mdl-textfield__label' %>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_field :shoe_size, class: 'mdl-textfield__input' %>
          <%= f.label :shoe_size, class: 'mdl-textfield__label' %>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_field :fav_color, class: 'mdl-textfield__input' %>
          <%= f.label :fav_color, class: 'mdl-textfield__label' %>
        </div>
        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect">
          <%= f.check_box :plus_one, class: 'mdl-checkbox__input' %>
          <%= f.label "I am not married and am bringing a +1", class: 'mdl-checkbox__label' %>
        </label>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.password_field :password, class: 'mdl-textfield__input' %>
          <%= f.label :change_password, class: 'mdl-textfield__label' %>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.password_field :password_confirmation, class: 'mdl-textfield__input' %>
          <%= f.label :password_confirmation, class: 'mdl-textfield__label' %>
        </div>
      </div>
      <div class="mdl-card__actions mdl-card--border">
      <%= f.submit "Save changes", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
      </div>
      <% end %>
    </div>
   </div>
  </main>
</div>
