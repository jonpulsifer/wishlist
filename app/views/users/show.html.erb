<% if current_user == @user %>
  <% provide(:title, "Home") %>
<% else %>
  <% provide(:title, "#{@user.name.capitalize}'s Profile") %>
<% end %>
<%= flash_messages %>
<% if current_user == @user %>
  <div class="mdl-cell">
    <%= render 'card-wishlist', user: @user %>
  </div>
  <div class="mdl-cell">
    <%= render 'card-claimed-gifts', user: @user, gifts: @gifts %>
  </div>
  <div class="mdl-cell mdl-cell--4-col">
    <%= render 'card-user-details', user: @user %>
  </div>
<% else %>
  <div class="mdl-cell">
    <%= render 'card-wishlist', user: @user %>
  </div>
  <div class="mdl-cell">
    <%= render 'card-user-details', user: @user %>
  </div>
<% end %>
