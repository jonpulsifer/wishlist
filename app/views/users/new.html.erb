<% provide(:title, "Create an Account") %>
<div class="login mdl-layout mdl-js-layout mdl-color--grey-300">
  <main class="login mdl-layout__content">
    <div class="login mdl-card mdl-shadow--8dp">
      <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
        <h3 class="mdl-card__title-text">Create an account</h3>
      </div>
      <div class="mdl-card__supporting-text">
        <%= flash_messages %>
        <%= form_for :user, :url => {:controller => 'users', :action => 'create'} do |f| %>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.text_field :name, class: 'mdl-textfield__input' , autofocus: true %>
            <%= f.label :name, class: 'mdl-textfield__label' %>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.text_field :family_id, class: 'mdl-textfield__input' %>
            <%= f.label :family_pin, class: 'mdl-textfield__label' %>
          </div>          
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.password_field :password, class: 'mdl-textfield__input' %>
            <%= f.label :password, class: 'mdl-textfield__label' %>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.password_field :password_confirmation, class: 'mdl-textfield__input' %>
            <%= f.label :password_confirmation, class: 'mdl-textfield__label' %>
          </div>
          <div class="mdl-card__actions">
            <%= f.submit :register, class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
            <%= link_to "have an account?", :login, class: "mdl-button mdl-js-button mdl-button--colored" %>
          </div>
        <% end %>
      </div>
</div>
    </div>
  </main>
</div>
