<% provide(:title, "Log In!") %>
<div class="container">
  <div class="row">
    <div class="col-sm">
    <%= form_for :user, :url => {:controller => 'users', :action => 'create'}, html: {class: 'form-signin'} do |f| %>
      <img class="mb-4" src="/images/holly.png" alt="" width="125" height="125">
      <%= flash_messages %>
      <h1 class="h3 mb-3 font-weight-normal">Create an account</h1>
      
      <%= f.label :name, class: 'sr-only' %>
      <%= f.text_field :name, class: 'form-control' , autofocus: true, placeholder: "Name" %>
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm Password" %>
      <%= f.submit :Register, class: 'btn btn-lg btn-primary btn-block' %>
    <% end %>
    </div>
  </div>
  <div class="row justify-content-center" style="margin-top:2em;">
    <div class="col-sm-auto align-items-center">
      <h5>Already Registered?</h5>
      <a href="/auth/login"><button type="button" class="btn btn-secondary btn-sm">Click Here to Sign In</button></a>
    </div>
  </div>
</div>
