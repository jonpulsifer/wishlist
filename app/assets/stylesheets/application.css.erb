/*
*= require_self
*/
@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900');
.mdl-card {
  width: 100%;
  overflow-wrap: break-word;
}

.mdl-layout__content {
  overflow-x: scroll;
}

.gift-action {
  text-transform: none;
  display: contents;
}

.gift-action-text {
    font-size: 12px;
    font-weight: 400;
    line-height: 1;
    letter-spacing: 0;
    color: rgba(0,0,0,.54);
}

.gift-action-center-icon {
  text-align: center;
}

.delete-button {
  float: right;
}

.gift-action-claim {
  color: rgba(63,81,181,1)
}

.gift-action-unclaim {
  color: rgba(165,0,0,.8)
}

.button-gift-action-unclaim {
  color: rgba(255,255,255,1);
  background-color: rgba(165,0,0,.8);
}

.button-gift-action-unclaim:hover {
  color: rgba(255,255,255,1);
  background-color: rgba(200,0,0,.85);
}

.gift-action-edit {
  color: rgba(0,0,0,.85)
}

.mdl-list__item {
    font-size: 16px;
    padding: 0;
}

a {
  <%# font-size: 15px;
  color: rgb(33,150,243); %>
  text-decoration: none;
}

.flash {
  font-size: 14px;
  font-weight: 600;
}

.flash.error {
  color: rgb(195,44,44);
}

.flash.alert {
}

.flash.notice {
}

.santa {
  background-image: url(<%= asset_data_uri 'santa.png' %>);
  background-origin: content-box;
  background-position: right top;
  background-repeat: no-repeat;
  background-size: 50%;
}

.custom-title {
  <%# font-style: italic; %>
  font-weight: 600;
  color: rgba(0,0,0,1);
}

.bottom-nav {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.mdl-layout__drawer .mdl-navigation .mdl-navigation__link {
  padding: 16px;
  margin: 0 0;
  font-size: 16px;
  font-weight: 600;
  color: rgba(63,81,181,1)
}

.mdl-layout__drawer .mdl-navigation .nav-link .mdl-navigation__link {
  color: rgba(0,0,0,1)
}

.nav-icon {
  color: rgba(63,81,181,1)
}

.flip {
  -webkit-transform: scaleX(-1);
  transform: scaleX(-1);
}
