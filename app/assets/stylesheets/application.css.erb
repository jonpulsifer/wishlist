/*
*= require_self
*/
@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900');
.mdl-card {
  width: 100%;
  overflow-wrap: break-word;
}

.mdl-layout__content {
  overflow-x: scroll;
}

.gift-action {
  text-transform: none;
  display: contents;
}

.gift-action-text {
    font-size: 12px;
    font-weight: 400;
    line-height: 1;
    letter-spacing: 0;
    color: rgba(0,0,0,.54);
}

.gift-action-center-icon {
  text-align: center;
}

.delete-button {
  float: right;
}

.gift-action-unclaimed {
  color: rgba(165,0,0,.85)
}

.button-gift-action-unclaimed {
  color: rgba(255,255,255,1);
  background-color: rgba(165,0,0,.8);
}

.button-gift-action-unclaimed:hover {
  color: rgba(255,255,255,1);
  background-color: rgba(200,0,0,.85);
}

.gift-action-edit {
  color: rgba(0,0,0,.85)
}

.mdl-list__item {
    font-size: 16px;
    padding: 0;
}

a {
  <%# font-size: 15px;
  color: rgb(33,150,243); %>
  text-decoration: none;
}

.flash {
  font-size: 14px;
  font-weight: 600;
}

.flash.error {
  color: rgb(195,44,44);
}

.flash.alert {
}

.flash.notice {
}

.santa {
  background-image: url(<%= asset_data_uri 'santadab2.png' %>);
  background-origin: content-box;
  background-position: right top;
  background-repeat: no-repeat;
  background-size: 35%;
  padding: 10px 10px;
}

.custom-title {
  font-style: italic;
  font-weight: 500;
  color: rgba(63,81,181,1);
}

.nav-link {
  font-size: 16px;
}
